<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.NewsHub" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Core Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Opt-out of Android 15+ edge-to-edge enforcement for consistent behavior -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>

        <!-- Status bar styling - consistent with toolbar color -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- Ensure proper system bar handling -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- Status bar text color (white text on dark green background) -->
        <item name="android:windowLightStatusBar">false</item>
        <!-- Navigation bar text color (white text on black background) -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <!-- ActionBar/Toolbar styling -->
        <item name="actionBarSize">56dp</item>
        <item name="android:actionBarSize">56dp</item>
    </style>

</resources>