<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.NewsHub" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Core Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status bar styling -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- Ensure proper system bar handling -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- Status bar text color (white text on dark background) -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- ActionBar/Toolbar styling -->
        <item name="actionBarSize">56dp</item>
        <item name="android:actionBarSize">56dp</item>
    </style>


</resources>